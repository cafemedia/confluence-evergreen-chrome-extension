{
  "manifest_version": 3,
  "name": "Raptive Confluence Evergreen Chrome Extension",
  "description": "A Chrome extension for checking 'freshness' of Raptive Confluence pages",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://cafemedia.atlassian.net/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
      "matches": []
    }
  ],
  "permissions": ["declarativeContent", "tabs", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
